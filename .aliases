#!/usr/bin/env bash

#--------------------Aliases-------------------- 
alias v='nvim'
alias s='sudo'
alias sp='sudo pacman'
alias sps='sudo pacman -S'
alias spr='sudo pacman -Rs'
alias f='nvim $(fzf-tmux)'

# Git
alias g='git'
alias gs='git status'
alias gd='git diff'
alias gc='git commit'
alias gcm='git commit -m'
alias ga='git add'
alias gaa='git add -A'
alias gcam='git commit -a -m'
alias gca='git commit -a'
alias gr='git reset'
alias gl='git log'
alias gp='git push -u origin master'

# Navigation
alias df='cd ~/dotfiles'
alias dfc='cd ~/dotfiles/.config'
alias ..='cd ..'
alias 2..='cd ../..'
alias 3..='cd ../../..'

# Tmux
alias tl='tmux attach-session' # Last tmux session
alias tls='tmux ls' # list all sessions
alias t='tmux'
alias tn='tmux new -t' # new tmux session
alias ta='tmux attach -t' # attatch tmux session
alias tk='tmux kill-session -t' # kill session

# RC Files
alias so='source ~/.zshrc'
alias tso='tmux source ~/.tmux.conf'
alias zrc='vim ~/dotfiles/.zshrc'
alias nrc='nvim ~/dotfiles/.config/nvim/init.vim'
alias trc='vim ~/dotfiles/.tmux.conf'

# Listing Files
alias l='ls -AF ${colorflag}'
alias ll='ls -lF ${colorflag}'
alias la='ls -lAF ${colorflag}'
alias lsd="ls -lF ${colorflag} | grep --color=never '^d'"
alias ls='command ls ${colorflag}'

# Grep
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# Miscellaneous
alias nf=neofetch
