[user]
    name = "Lance Bergeron"
    email = bergeron.lance6@gmail.com
	signingkey = /home/labergeron/.ssh/id_rsa.pub

[core]
    editor = vim

[alias]
        co  = checkout
        s   = status
        l   = log

        c   = commit
        cm  = commit -m
        cam = commit -am

        d   = diff
        dc  = diff --cached

        r   = reset
        rh  = reset --hard


        p   = push
        f   = pull

        a   = add
        aa  = add -A

        lag = log --oneline --all --decorate=short --graph

[init]
	defaultBranch = main

[gpg]
	format = ssh

[commit]
	gpgsign = true
