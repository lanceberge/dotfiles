#!/bin/bash
export XDG_CONFIG_HOME=~/dotfiles/.config
export LANG=en_US.UTF-8
export EDITOR=vim

# source aliases, prompt, ...
for file in ~/dotfiles/.{aliases,local}; do
    if [ -r "$file" ] && [ -f "$file" ]; then
        source "$file";
    fi
done;
unset file;

if [ -d ~/code/scripts ]; then
    for dir in ~/code/scripts/*/; do
        if [ -d "$dir" ]; then
            export PATH="$dir":"$PATH"
        fi
    done
fi

# add to path
for dir in {~/.local/bin,~/go/bin,~/dotfiles/bin,~/.cargo/bin,/opt/homebrew/opt/llvm/bin,/opt/homebrew/opt/openjdk/bin}; do
    if [ -d "$dir" ]; then
        export PATH="$dir:$PATH";
    fi
done;

unset dir;

export HISTFILE=~/.bash_history
export HISTSIZE=30000
export HISTFILESIZE=30000

export GH_TOKEN=$(cat ~/secrets/gh_token)

# a new shell gets history from all previous shells
PROMPT_COMMAND='history -a'
export HISTCONTROL=ignoredups:erasedups

function cd {
    builtin cd "$@" && ls -F
}

function vimf() {
    if [ "$#" -eq 1 ]; then
        $EDITOR $(find -name "$1")
    elif [ "$#" -eq 2 ]; then
        $EDITOR $(find "$1" -name "$2")
    else
        echo "Usage: vimf [directory] <filename>"
    fi
}

function cdf() {
    if [ "$#" -eq 1 ]; then
        cd $(find -name "$1")
    elif [ "$#" -eq 2 ]; then
        cd $(find "$1" -name "$2")
    else
        echo "Usage: cdf [directory] <filename>"
    fi
}

