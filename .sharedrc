#!/bin/bash
export XDG_CONFIG_HOME=~/dotfiles/.config
export LANG=en_US.UTF-8
export EDITOR=nvim

# source aliases, prompt, ...
for file in ~/dotfiles/.{aliases,local} \
    ~/dotfiles/aws_functions; do
    if [ -r "$file" ] && [ -f "$file" ]; then
        source "$file"
    fi
done
unset file

if [ -d ~/code/scripts ]; then
    for dir in ~/code/scripts/*/; do
        if [ -d "$dir" ]; then
            export PATH="$dir":"$PATH"
        fi
    done
fi

# add to path
for dir in ~/.local/bin ~/go/bin ~/dotfiles/bin ~/.cargo/bin \
    /opt/homebrew/opt/llvm/bin /opt/homebrew/opt/openjdk/bin; do
    if [ -d "$dir" ]; then
        export PATH="$dir:$PATH"
    fi
done

unset dir

export HISTFILE=~/.bash_history
export HISTSIZE=30000
export HISTFILESIZE=30000

export GH_TOKEN=$(cat ~/secrets/gh_token)

# a new shell gets history from all previous shells
PROMPT_COMMAND='history -a'
export HISTCONTROL=ignoredups:erasedups

function cd {
    builtin cd "$@" && ls -F
}

function vimf() {
    if [ "$#" -eq 1 ]; then
        $EDITOR $(find -name "$1")
    elif [ "$#" -eq 2 ]; then
        $EDITOR $(find "$1" -name "$2")
    else
        echo "Usage: vimf [directory] <filename>"
    fi
}

function cdf() {
    if [ "$#" -eq 1 ]; then
        cd $(find -name "$1")
    elif [ "$#" -eq 2 ]; then
        cd $(find "$1" -name "$2")
    else
        echo "Usage: cdf [directory] <filename>"
    fi
}

__conda_setup="$('/home/labergeron/miniconda3/bin/conda' 'shell.bash' 'hook' 2>/dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/home/labergeron/miniconda3/etc/profile.d/conda.sh" ]; then
        . "/home/labergeron/miniconda3/etc/profile.d/conda.sh"
    else
        export PATH="/home/labergeron/miniconda3/bin:$PATH"
    fi
fi
unset __conda_setup
